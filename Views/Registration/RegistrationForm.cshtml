@model HotelCalifornia.Classes.RegisteredUser

@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-md-4">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>RegisteredUser</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="text" placeholder="username"/>
                    <input type="password" placeholder="password" />
                    <input type="datetime" placeholder="1990, 12, 12" />
                    <input type="text" placeholder="first name" />
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>
<div class="col-md-4">
    <p>this is the registration form, where a new user will be created</p>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Models/Classes/Users/RegisteredUser")
}